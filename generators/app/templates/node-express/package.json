{
  "name": "node-express-server-1.0.0",
  "version": "1.0.0",
  "description": "Basic node-express server.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --fix .",
    "stub": "node $NODE_DEBUG_OPTION ./src/openAPI/generateStub.js | npm run lint",
    "start": "node index.js",
    "local-start": "node $NODE_DEBUG_OPTION index.js",
    "test": "jest"
  },
  "author": "Your name <abc@xyz.com>",
  "license": "UNLICENSED",
  "engines": {
    "node": ">= 8.9.4",
    "npm": ">= 6.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/controllers/*.js",
      "src/routers/*.js",
      "src/services/*.js"
    ]
  },
  "dependencies": {},
  "devDependencies": {}
}
